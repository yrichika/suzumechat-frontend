{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@testhelpers/*": ["../_testhelpers/*"],
      "@components/*": ["../components/*"],
      "@hooks/*": ["../hooks/*"],
      "@lang/*": ["../lang/*"],
      "@pages/*": ["../pages/*"],
      "@services/*": ["../services/*"],
      "@stores/*": ["../stores/*"],
      "@styles/*": ["../styles/*"],
      "@utils/*": ["../utils/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules"]
}
